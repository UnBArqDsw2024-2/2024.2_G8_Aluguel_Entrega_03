generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
    cpfcnpj    String     @id
    email String  @unique
    name  String?
    posts Post[]
}

model Post {
    id        Int      @id @default(autoincrement())
    title     String
    content   String?
    published Boolean? @default(false)
    author    User?    @relation(fields: [authorId], references: [cpfcnpj])
    authorId  String?
}

